@model SurveyTool.Models.Survey

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({ format: 'mm/dd/yyyy' });

            $(document).on('click', 'a[data-toggle=comment]', function () {
                var id = $(this).attr('href');
                $(id).toggle();
                return false;
            });
        });
    </script>
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<form action="@Url.Action("CreateResponse", "SurveyCustomer", new {surveyId = Request["surveyId"]})" method="post" id="form_Response">
    <div class="well well-small">
        <h4>Câu hỏi</h4>
    </div>
    <ul class="unstyled bordered skip-first">
        @foreach (var question in Model.Questions)
        {
            int count = 0;
            <li class="row">
                <div class="span9">
                    <input type="hidden" name="Answers.Index" value="@question.Id" />
                    <input type="hidden" name="Answers[@question.Id].QuestionId" value="@question.Id" />
                    @Html.Raw(question.Body)
                </div>
            </li>
            <li class="row">
                <div class="span12">
                    @if (question.Required)
                    {
                        if (question.Type == "Yes/No")
                        {
                            @*<select class="span3" name="Answers[@question.Id].Value">
                                    <option disabled selected>Chọn câu trả lời...</option>
                                    <option>Có</option>
                                    <option>Không</option>
                                </select>*@
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Có" required
                                       oninvalid="this.setCustomValidity('Vui lòng trả lời câu hỏi')"
                                       oninput="setCustomValidity('')">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Có
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Không">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Không
                                </label>
                            </div>
                            count++;
                        }
                        if (question.Type == "Number")
                        {
                            <input class="span3" type="number" name="Answers[@question.Id].Value" placeholder="Nhập số..." required
                                   oninvalid="this.setCustomValidity('Vui lòng trả lời câu hỏi')"
                                   oninput="setCustomValidity('')" />
                        }
                        if (question.Type == "Correct/Incorrect")
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Có" required
                                       oninvalid="this.setCustomValidity('Vui lòng trả lời câu hỏi')"
                                       oninput="setCustomValidity('')">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios2">
                                    Đúng
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Không">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios2">
                                    Sai
                                </label>
                            </div>
                            count++;
                        }
                        if (question.Type == "Text")
                        {
                            <textarea name="Answers[@question.Id].Value" placeholder="Nhập câu trả lời..." required
                                      oninvalid="this.setCustomValidity('Vui lòng trả lời câu hỏi')"
                                      oninput="setCustomValidity('')"></textarea>
                        }
                        if (question.Type == "Email")
                        {
                            <input class="form-check-input" type="email" name="Answers[@question.Id].Value" title="Nhập email của bạn" required="" placeholder="Nhập email của bạn..." oninvalid="if (this.value == ''){this.setCustomValidity('Vui lòng nhập email!')} if (this.value != ''){this.setCustomValidity('Email không hợp lệ!')}" oninput="setCustomValidity('')">
                        }
                    }
                    else
                    {
                        if (question.Type == "Yes/No")
                        {
                            @*<select class="span3" name="Answers[@question.Id].Value">
                                    <option disabled selected>Chọn câu trả lời...</option>
                                    <option>Có</option>
                                    <option>Không</option>
                                </select>*@
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Có">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Có
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Không">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Không
                                </label>
                            </div>
                            count++;
                        }
                        if (question.Type == "Number")
                        {
                            <input class="span3" type="number" name="Answers[@question.Id].Value" placeholder="Nhập số..." />
                        }
                        if (question.Type == "Correct/Incorrect")
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Có">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Đúng
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios[@count]" value="Không">
                                <label class="form-check-label" style="display:inline-block" for="exampleRadios[@count]">
                                    Sai
                                </label>
                            </div>
                            count++;
                        }
                        if (question.Type == "Text")
                        {
                            <textarea name="Answers[@question.Id].Value" placeholder="Nhập câu trả lời..."></textarea>
                        }
                        if (question.Type == "Email")
                        {
                            <input class="form-check-input" type="email" name="Answers[@question.Id].Value" placeholder="Nhập email của bạn..." required=""
                                   oninvalid="this.setCustomValidity('Email bắt buộc nhập')">
                        }
                    }
                    <textarea id="@("comment" + question.Id)" class="span3 hide" name="Answers[@question.Id].Comment" placeholder="Bình luận..."></textarea>
                    <a href="@("#comment" + @question.Id)" data-toggle="comment"><small>Ẩn/Hiện Bình luận</small></a>
                </div>
            </li>
        }
    </ul>

    <div class="form-actions">
        @*<button class="btn btn-inverse pull-right" name="action" value="Next">
            Lưu và tiếp tục khảo sát khác
        </button>*@
        <input class="btn btn-primary" type="submit" name="action" value="Gửi" />
        @*<a class="btn" href="@Url.Action("Index", "Home")">Hủy</a>*@
    </div>
</form>