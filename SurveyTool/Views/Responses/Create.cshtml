@model SurveyTool.Models.Survey

@{
    ViewBag.Title = Model.Name;
}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({ format: 'mm/dd/yyyy' });

            $(document).on('click', 'a[data-toggle=comment]', function () {
                var id = $(this).attr('href');
                $(id).toggle();
                return false;
            });
        });
    </script>
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<form action="@Url.Action("Create", "Responses", new {surveyId = Request["surveyId"]})" method="post">
    <div class="well well-small">
        <h4>Câu hỏi</h4>
    </div>
    <ul class="unstyled bordered skip-first">
        @foreach (var question in Model.Questions)
        {
            <li class="row">
                <div class="span9">
                    <input type="hidden" name="Answers.Index" value="@question.Id" />
                    <input type="hidden" name="Answers[@question.Id].QuestionId" value="@question.Id" />
                    @Html.Raw(question.Body)
                </div>
            </li>
            <li class="row">
                <div class="span12">
                    @if (question.Type == "Yes/No")
                    {
                        @*<select class="span3" name="Answers[@question.Id].Value">
                            <option disabled selected>Chọn câu trả lời...</option>
                            <option>Có</option>
                            <option>Không</option>
                        </select>*@
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios1" value="Có" checked>
                            <label class="form-check-label" style="display:inline-block" for="exampleRadios1">
                                Có
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Answers[@question.Id].Value" id="exampleRadios1" value="Không">
                            <label class="form-check-label" style="display:inline-block" for="exampleRadios1">
                                Không
                            </label>
                        </div>
                    }
                    @if (question.Type == "Number")
                    {
                        <input class="span3" type="text" name="Answers[@question.Id].Value" placeholder="Nhập số..." />
                    }
                    <textarea id="@("comment" + question.Id)" class="span3 hide" name="Answers[@question.Id].Comment" placeholder="Bình luận..."></textarea>
                    <a href="@("#comment" + @question.Id)" data-toggle="comment"><small>Ẩn/Hiện Bình luận</small></a>
                </div>
            </li>
        }
    </ul>

    <div class="form-actions">
        <button class="btn btn-inverse pull-right" name="action" value="Next">
            Lưu và tiếp tục khảo sát khác
        </button>
        <input class="btn btn-primary" type="submit" name="action" value="Lưu" />
        <a class="btn" href="@Url.Action("Index", "Home")">Hủy</a>
    </div>
</form>