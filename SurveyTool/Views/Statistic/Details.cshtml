@model SurveyTool.Models.Response

@{
    ViewBag.Title = Model.Survey.Name;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="well well-small">
    <h4>Thông tin khảo sát</h4>
</div>
<ul class="unstyled bordered skip-first">
    <li class="row">
        <div class="span9">
            <label><b>Người tham gia khảo sát   </b></label>
            <p class="help-block">
                Đã hoàn thành bài khảo sát
            </p>
        </div>
        <div class="span3">
            <div class="well well-small">
                @Model.CreatedBy
            </div>
        </div>
    </li>
    <li class="row">
        <div class="span9">
            <label><b>Thời gian</b></label>
            <p class="help-block">
                Thời gian người này bắt đầu khảo sát
            </p>
        </div>
        <div class="span3">
            <div class="well well-small">
                @Model.CreatedOn
            </div>
        </div>
    </li>
</ul>

<div class="well well-small">
    <h4>Câu hỏi</h4>
</div>
<ul class="unstyled bordered skip-first">
    @foreach (var item in Model.Answers)
    {
        <li class="row">
            <div class="span9">
                @Html.Raw(item.Question.Body)
            </div>
            <div class="span3">
                <div class="well well-small">@item.Value</div>
                <div class="well well-small">@item.Comment</div>
            </div>
        </li>
    }
</ul>